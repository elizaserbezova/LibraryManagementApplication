@model BookViewModel

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<div class="card">
    <div class="card-header">
        <h4>Are you sure you want to delete this book?</h4>
    </div>
    <div class="card-body">
        <p><strong>Title:</strong> @Model.Title</p>
        <p><strong>Author:</strong> @Model.AuthorName</p>
        <p><strong>Genre:</strong> @Model.GenreName</p>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteConfirmation" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BookId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Book")">Cancel</a>
        </form>
    </div>
</div>