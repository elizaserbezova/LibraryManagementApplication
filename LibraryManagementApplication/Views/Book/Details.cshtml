@model BookViewModel

@{
    ViewData["Title"] = "Book Details";
}

<h2>Book Details</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <p><strong>ISBN:</strong> @Model.ISBN</p>
        <p><strong>Author:</strong> @Model.AuthorName</p>
        <p><strong>Genre:</strong> @Model.GenreName</p>
        <p><strong>Publish Date:</strong> @Model.PublishDate.ToShortDateString()</p>
        <p><strong>Availability:</strong> @(Model.AvailabilityStatus ? "Available" : "Unavailable")</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-secondary" href="@Url.Action("Index", "Book")">Back to List</a>
    </div>
</div>