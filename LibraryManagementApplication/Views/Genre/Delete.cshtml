@model GenreViewModel

@{
    ViewData["Title"] = "Delete Genre";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h4>Are you sure you want to delete this genre?</h4>
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="GenreId" />
            <input class="btn btn-danger w-100 py-2 fw-bold rounded" type="submit" value="Delete" />
        </form>
    </div>
</div>