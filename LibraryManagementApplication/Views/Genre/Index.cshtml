@model IEnumerable<GenreViewModel>

@{
    ViewData["Title"] = "Genres";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create">Add New Genre</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
                <td>@genre.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@genre.GenreId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@genre.GenreId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>