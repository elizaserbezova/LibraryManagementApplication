@model IEnumerable<AuthorViewModel>

@{
    ViewData["Title"] = "Authors";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create">Add New Author</a>
</div>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Biography</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.Biography</td>
                <td>@(author.DateOfBirth.HasValue ? author.DateOfBirth.Value.ToString("dd-MM-yyyy") : "N/A")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@author.AuthorId">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@author.AuthorId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@author.AuthorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


